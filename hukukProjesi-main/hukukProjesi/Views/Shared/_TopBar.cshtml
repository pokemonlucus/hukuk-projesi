@{
    var nameSurname = Context.Session["NameSurname"] as string;
    var userId = Context.Session["UserId"] as int?;
    var Email = Context.Session["userEmail"] as string;
    var Image = Context.Session["userImage"];
    var About = Context.Session["userAbout"];
    var Aciklama = Context.Session["userAciklama"];
    var Deneyim = Context.Session["userDeneyim"];
    var Egitim = Context.Session["userEgitim"];
}
<div class="page-loader-wrapper">
    <div class="loader">
        <div class="preloader">
            <div class="spinner-layer pl-red">
                <div class="circle-clipper left">
                    <div class="circle"></div>
                </div>
                <div class="circle-clipper right">
                    <div class="circle"></div>
                </div>
            </div>
        </div>
        <p>Lütfen Bekleyin...</p>
    </div>
</div>
<div class="overlay"></div>
<nav class="navbar">
    <div class="container-fluid">
        <div class="navbar-header">
            <a href="javascript:void(0);" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false"></a>
            <a href="javascript:void(0);" class="bars"></a>
            <a class="navbar-brand" href="index.html">ADMİN PANEL - ÖNCÜ HUKUK</a>
        </div>
        <div class="collapse navbar-collapse" id="navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                <!-- Call Search -->
                <li><a href="@Url.Action("Edit", "AuthorAdmin", new { id = userId })"><i class="material-icons">edit</i></a></li>
                <li><a href="javascript:void(0);" onclick="showDetails()"><i class="material-icons">person</i></a></li>
                <li><a href="@Url.Action("Login", "AuthorAdmin")"><i class="material-icons">exit_to_app</i></a></li>
                <li class="pull-right"><a href="javascript:void(0);" class="js-right-sidebar" data-close="true"><i class="material-icons">more_vert</i></a></li>
            </ul>
        </div>
    </div>
</nav>

<div id="detailsModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Details</h4>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <tr>
                        <td>Ad Soyad</td>
                        <td>@nameSurname</td>
                    </tr>
                    <tr>
                        <td>E-Posta</td>
                        <td>@Email</td>
                    </tr>
                    <tr>
                        <td>Alanı</td>
                        <td>@About</td>
                    </tr>
                    <tr>
                        <td>Eğitim</td>
                        <td>@Egitim</td>
                    </tr>
                    <tr>
                        <td>Deneyim Süresi</td>
                        <td>@Deneyim</td>
                    </tr>
                    <tr>
                        <td>Biyografi</td>
                        <td>@Aciklama</td>
                    </tr>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    function showDetails() {
        $('#detailsModal').modal('show');
    }
</script>
