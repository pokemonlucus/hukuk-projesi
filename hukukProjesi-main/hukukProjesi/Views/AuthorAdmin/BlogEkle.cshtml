@model hukukProjesi.Models.Blog
@{
    ViewBag.Title = "BlogEkle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Blog Ekleme Sayfası
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="body">
                @using (Html.BeginForm("BlogEkle", "AuthorAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <label for="email_address">Resim</label>
                    <div class="form-group">
                        <div class="form-line">
                            <input type="file" id="File2" name="File2" accept=".jpg,.JPG,.PNG,.png,.jpeg,.JPEG" class="form-control" />
                        </div>
                        @Html.ValidationMessageFor(model => model.image, "", new { @class = "text-danger" })
                    </div>
                    <label for="email_address">Başlık</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.EditorFor(model => model.Baslik, new { htmlAttributes = new { @class = "form-control", @maxlength = "100", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.Baslik, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <label for="password">Özet</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.EditorFor(model => model.Ozet, new { htmlAttributes = new { @class = "form-control", @maxlength = "500", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.Ozet, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <label for="password">Konu</label>
                    <div class="form-group">
                        <div class="form-group">
                            <div class="form-line">
                                <textarea id="Konu" name="Konu" class="form-control" rows="5">@Model.Konu</textarea>
                                @Html.ValidationMessageFor(model => model.Konu, "", new { @class = "text-danger", @maxlength = "2000" })
                            </div>
                        </div>
                    </div>

                    <br>
                    <div align="center">
                        <input type="submit" class="btn btn-success m-t-15 waves-effect" value="Blog Ekle">
                    </div>
                }
            </div>
        </div>
    </div>
</div>
