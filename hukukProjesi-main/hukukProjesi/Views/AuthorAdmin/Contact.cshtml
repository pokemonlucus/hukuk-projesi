@model List<hukukProjesi.Models.Contacts>
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">
        <div class="body">
            <div class="table-responsive">
                <table id="example" class="table table-striped table-bordered nowrap" cellspacing="0" style="width:100%;">
                    <thead>
                        <tr>
                            <th>İsim Soyisim</th>
                            <th>E-posta</th>
                            <th>Konu</th>
                            <th>Detay</th> <!-- Yeni sütun -->
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContactNameSurname)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.ContactMail)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.ContactSubject)
                                </td>

                                <td>
                                    <button class="btn btn-info" onclick="showMessage('@item.ContactNameSurname', '@item.ContactMail', '@item.ContactPhone', '@item.ContactSubject', '@item.ContactMessage')">Detay</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="messageModal" tabindex="-1" role="dialog" aria-labelledby="messageModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="messageModalLabel">Mesaj Detayı</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p><strong>İsim Soyisim:</strong> <span id="contactName"></span></p>
                <p><strong>E-posta:</strong> <span id="contactEmail"></span></p>
                <p><strong>Telefon:</strong> <span id="contactPhone"></span></p>
                <p><strong>Konu:</strong> <span id="contactSubject"></span></p>
                <p><strong>Mesaj:</strong></p>
                <p id="contactMessage"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

<script>
    function showMessage(name, email, phone, subject, message) {
        $('#contactName').text(name);
        $('#contactEmail').text(email);
        $('#contactPhone').text(phone);
        $('#contactSubject').text(subject);
        $('#contactMessage').text(message);
        $('#messageModal').modal('show');
    }
</script>
